# CI/CD Pipeline Health Dashboard Environment Configuration
# Copy this file to .env and fill in your actual values

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
FLASK_ENV=production
SECRET_KEY=your-super-secret-key-here-change-in-production
FLASK_DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
MONGODB_URI=mongodb://admin:password123@localhost:27017/cicd-dashboard?authSource=admin

# =============================================================================
# JENKINS CONFIGURATION
# =============================================================================
# Your Jenkins instance URL
JENKINS_URL=http://44.249.60.108:8080

# Jenkins credentials
JENKINS_USERNAME=your-jenkins-username
JENKINS_API_TOKEN=your-jenkins-api-token

# =============================================================================
# ALERTING CONFIGURATION
# =============================================================================
# Slack webhook URL for notifications
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Email configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NODE_ENV=production
BACKEND_URL=http://localhost:5000

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
# Prometheus metrics endpoint
PROMETHEUS_ENABLED=true

# Logging level
LOG_LEVEL=INFO

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=30

# Data collection interval (minutes)
DATA_COLLECTION_INTERVAL=5

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900

# =============================================================================
# DEVELOPMENT OVERRIDES
# =============================================================================
# Set to true to insert sample data
INSERT_SAMPLE_DATA=false

# Development mode (enables debug features)
DEV_MODE=false

# =============================================================================
# DOCKER CONFIGURATION
# =============================================================================
# Container names (auto-generated if not specified)
MONGODB_CONTAINER_NAME=cicd-mongodb
BACKEND_CONTAINER_NAME=cicd-backend
FRONTEND_CONTAINER_NAME=cicd-frontend
REDIS_CONTAINER_NAME=cicd-redis

# Port mappings
MONGODB_PORT=27017
BACKEND_PORT=5000
FRONTEND_PORT=3000
REDIS_PORT=6379

# =============================================================================
# BACKUP & MAINTENANCE
# =============================================================================
# MongoDB backup settings
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# Data retention settings
BUILD_RETENTION_DAYS=90
METRICS_RETENTION_DAYS=365
